---
import '@fontsource-variable/playfair-display';
import '@fontsource/merriweather';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Revista Digital de Shaila Rubín Seoane" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-primary-50 to-primary-100 text-primary-900 min-h-screen">
    <Navigation />
    <main class="pt-16">
      <slot />
    </main>
    <footer class="mt-20 py-8 bg-white/50 backdrop-blur-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-primary-500 font-body">
        <p>&copy; {new Date().getFullYear()} Shaila Rubín Seoane. Todos los derechos reservados.</p>
      </div>
    </footer>
  </body>
</html>