---
const links = [
  { href: '/logros', text: 'Logros' },
  { href: '/educacion', text: 'Educaci√≥n' },
  { href: '/proyectos', text: 'Proyectos' },
  { href: '/vida', text: 'Vida Personal' }
];
---

<nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm shadow-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="font-display text-2xl hover:text-primary-600 transition-colors">
          <span class="text-primary-900">S</span>haila
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden sm:flex items-center space-x-8">
        {links.map(link => (
          <a 
            href={link.href} 
            class="font-body text-primary-600 hover:text-primary-900 transition-colors relative group"
          >
            {link.text}
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary-300 group-hover:w-full transition-all duration-300"></span>
          </a>
        ))}
      </div>

      <!-- Mobile Navigation Button -->
      <button class="sm:hidden flex items-center" id="mobileMenuButton">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation Menu -->
    <div class="sm:hidden hidden" id="mobileMenu">
      <div class="pt-2 pb-3 space-y-1">
        {links.map(link => (
          <a
            href={link.href}
            class="block px-3 py-2 text-base font-body text-primary-600 hover:text-primary-900 hover:bg-primary-50 transition-colors"
          >
            {link.text}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>